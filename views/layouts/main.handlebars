<html lang='en'>


<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />
  <link rel='stylesheet' href='/css/modal.css' />
  <link rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css' />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Passion+One:wght@700&display=swap" rel="stylesheet">


    <title>Tag Along</title>
  </head>

<body>
  <header>
    <nav class='navbar navbar-expand-lg bg-dark'>
      <div class='container-fluid'>
        <img src='/images/calendar.svg' width='40' height='40' class='d-inline-block'
          alt='Calendar' />
        <h1 class='navbar-brand'>&nbsp;&nbsp;Tag Along</h1>
           <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
             <img src="/images/list.svg" width="30">
      <span class="navbar-toggler-icon"></span>
    </button>
        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            {{#if loggedIn}}
            <li class='nav-item'>
              <a class='nav-link active' href='/dashboard'>Dashboard</a>
            </li>
            <li class='nav-item'>
              <a data-bs-toggle='modal' data-bs-target='#newEventModal' class='nav-link active'>Create Event</a>
            </li>
            <li class='nav-item'>
              <button class='btn nav-link nav-link-btn' id='logout'>Logout</button>
            </li>
            {{else}}
            <li class='nav-item'>
              <a href='/signup' class='nav-link active'>Sign Up</a>
            </li>
            <li class='nav-item'>
              <a href='/login' class='nav-link active'>Login</a>
            </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>
    {{{body}}}
    <div class='modal fade' id='newEventModal' data-bs-backdrop='static' tabindex='-1' aria-labelledby='modal-title'
      aria-hidden='true'>
      <div class='modal-dialog'>
        <div class='modal-content'>
          <div class='modal-header'>
            <h2 class='modal-title'>Create a New Event</h2>
            <button type='button' class='btn-close btn-close-white' data-bs-dismiss='modal' aria-label='Close'></button>
          </div>
          <div class='modal-body'>

            <div action='/newevent' method='post' id='createNewEvent' role='form'>
              <div class='mb-3'>
                <label for='eventName' class='form-label'>Event Name</label>
                <input type='text' id='eventName' name='eventName' />
              </div>
              <div class='mb-3'>
                <label for='eventDesc' class='form-label'>Event Description</label>
                <textarea id='eventDesc' name='eventDesc' rows='3'></textarea>
              </div>
              <div class='mb-3'>
                <label for='dateTime' class='form-label'>Choose a Date and
                  Time</label>
                <input type='datetime-local' id='dateTime' name='dateTime' />
              </div>
              <div class='mb-3'>
                <label for='discordPost' class='form-label'>Post Event to
                  Discord?</label>
                <input type='checkbox' id='discordPost' name='discordPost' />
              </div>
              <div class='modal-footer'>
                <button type='submit' class='btn btn-outline-light mb-3 createEvent'>Create Event</button>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    <script src='/js/newevent.js'></script>
    <script src='/js/logout.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'></script>
  </main>

</body>



</html>